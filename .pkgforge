name 'coreutils'
org 'amylum'

licenses 'COPYING'

deps(
  openssl: {
    version: '1.0.2l-1',
    checksum: '6a46a1a65aa5cadc69a2b01e3ef8fa0a38353f3f7b86c1a772ab5156dd5b2264'
  }
)

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc/ssh',
  libexecdir: '/usr/bin',
  'enable-no-install-program': 'groups,hostname,kill,uptime',
  'with-openssl': nil
)

cflags
cflags(['-Wno-error=implicit-fallthrough'])
harden

build do
  run './bootstrap'
  configure 'FORCE_UNSAFE_CONFIGURE' => '1'
  make
  install
  rm 'usr/lib/charset.alias'
end

test do
  run 'true'
end
