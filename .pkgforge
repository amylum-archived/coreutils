name 'coreutils'
org 'amylum'

licenses 'COPYING'

deps(
  openssl: {
    version: '1.1.0h-3',
    checksum: 'c9d6db39ea09dd8051cb36c42f85eb8043ce580c6132caa0506a839d88dea275'
  }
)

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc/ssh',
  libexecdir: '/usr/bin',
  'enable-no-install-program': 'groups,hostname,kill,uptime',
  'with-openssl': nil
)

cflags
cflags([
  '-Wno-error=implicit-fallthrough',
  '-Wno-error=attributes',
  '-Wno-error=cast-function-type'
])
harden

patch 'ld_library_path.patch'

build do
  run './bootstrap'
  configure 'FORCE_UNSAFE_CONFIGURE' => '1'
  make 'OPENSSL_LD_LIBRARY_PATH' => "#{dep(:openssl)}/usr/lib"
  install
  rm 'usr/lib/charset.alias'
end

test do
  run 'true'
end
