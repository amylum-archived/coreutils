name 'coreutils'
org 'amylum'

licenses 'COPYING'

deps(
  openssl: {
    version: '1.1.0g-1',
    checksum: 'f70d94ca94f05be4a14438cf29ed4695d9731d023a4b72d30126d826720bc48b'
  }
)

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc/ssh',
  libexecdir: '/usr/bin',
  'enable-no-install-program': 'groups,hostname,kill,uptime',
  'with-openssl': nil
)

cflags
cflags(['-Wno-error=implicit-fallthrough'])
harden

build do
  run './bootstrap'
  configure 'FORCE_UNSAFE_CONFIGURE' => '1'
  make
  install
  rm 'usr/lib/charset.alias'
end

test do
  run 'true'
end
