name 'coreutils'
org 'amylum'

licenses 'COPYING'

deps(
  openssl: {
    version: '1.1.0h-1',
    checksum: 'c05e026a0e376cc4f5bb1dc1718fab436152e4cc35f02a378a8b85a28764572a'
  }
)

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc/ssh',
  libexecdir: '/usr/bin',
  'enable-no-install-program': 'groups,hostname,kill,uptime',
  'with-openssl': nil
)

cflags
cflags(['-Wno-error=implicit-fallthrough'])
harden

patch 'ld_library_path.patch'

build do
  run './bootstrap'
  configure 'FORCE_UNSAFE_CONFIGURE' => '1'
  make 'OPENSSL_LD_LIBRARY_PATH' => "#{dep(:openssl)}/usr/lib"
  install
  rm 'usr/lib/charset.alias'
end

test do
  run 'true'
end
