name 'coreutils'
org 'amylum'

licenses 'COPYING'

deps(
  openssl: '1.0.2j-3'
)

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc/ssh',
  libexecdir: '/usr/bin',
  'enable-no-install-program': 'groups,hostname,kill,uptime',
  'with-openssl': nil
)

cflags

build do
  run './bootstrap'
  configure 'FORCE_UNSAFE_CONFIGURE' => '1'
  make
  install
  rm 'usr/lib/charset.alias'
end

test do
  run 'true'
end
