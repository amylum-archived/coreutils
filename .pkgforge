name 'coreutils'
org 'amylum'

licenses 'COPYING'

deps(
  openssl: {
    version: '1.1.0g-2',
    checksum: 'de874867ea234470f6bc1969f6edaf6494e8b8e9f85c108b4db638cda3888241'
  }
)

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc/ssh',
  libexecdir: '/usr/bin',
  'enable-no-install-program': 'groups,hostname,kill,uptime',
  'with-openssl': nil
)

cflags
cflags(['-Wno-error=implicit-fallthrough'])
harden

patch 'ld_library_path.patch'

build do
  run './bootstrap'
  configure 'FORCE_UNSAFE_CONFIGURE' => '1'
  make 'OPENSSL_LD_LIBRARY_PATH' => "#{dep(:openssl)}/usr/lib"
  install
  rm 'usr/lib/charset.alias'
end

test do
  run 'true'
end
